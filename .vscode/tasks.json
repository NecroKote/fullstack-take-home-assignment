{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make migrations",
            "type": "shell",
            "command": ".venv/bin/python service/manage.py makemigrations",
        },
        {
            "label": "Migrate",
            "type": "shell",
            "command": ".venv/bin/python service/manage.py migrate",
        },
        {
            "label": "Test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": ".venv/bin/python service/manage.py test --settings=api.settings.test api",
        }
    ]
}